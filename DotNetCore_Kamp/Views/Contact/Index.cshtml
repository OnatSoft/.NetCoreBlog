
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<link href="~/CoreBlogTema/css/contact.css" rel='stylesheet' type='text/css' />
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>

<!--********** Burası İletişim View Sayfası **********-->
<body>
    <section class="main-content-w3layouts-agileits">

        <h3 class="tittle">Bize Ulaşın</h3>
        <p class="sub text-center">Düşünceleriniz bizim için önemli</p>
        <div class="contact-map inner-sec">

            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d16609.149487327653!2d30.504633605535002!3d39.78224043084844!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1str!2str!4v1635038693987!5m2!1str!2str"
                    class="map" style="border:0" allowfullscreen=""></iframe>
        </div>
        <div class="ad-inf-sec bg-light">
            <div class="container">
                <div class="address row">

                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-map"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Adres</h6>
                                <p>
                                    Eskişehir, Türkiye
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">
                            <div class="col-md-4 address-left text-center">
                                <i class="far fa-envelope"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>E-posta</h6>
                                <p>
                                    <a href="mailto:onat.somer2018@gmail.com"> onat.somer2018@gmail.com</a>
                                </p>
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-4 address-grid">
                        <div class="row address-info">

                            <div class="col-md-4 address-left text-center">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <div class="col-md-8 address-right text-left">
                                <h6>Telefon</h6>
                                <p>+90 505 222 2222</p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="container">
            <div class="contact_grid_right">
                <form method="post" id="subform">
                    <div id="contact_result"> </div>
                    <br />
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left">

                            <div class="form-group">
                                <label for="validationCustom01 my-2">*Ad-Soyad</label>
                                <input id="namesurname" class="form-control" type="text" name="UserName" required />
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlInput1">*E-posta</label>
                                <input id="email" class="form-control" type="email" name="EMail" required />
                            </div>
                            <div class="form-group">
                                <label for="validationCustom03 my-2">*Konu</label>
                                <input id="subject" class="form-control" type="text" name="Subject" required />
                            </div>
                        </div>

                        <div class="col-md-6 con-right">

                            <div class="form-group">
                                <label for="textarea">*Mesajınız</label>
                                <textarea id="message" class="form-control" name="Message"></textarea>
                            </div>
                            <button class="btn btn-success btn-block btn-lg" type="submit" id="btnsend"> Gönder </button>
                            <p> Bu form ile geliştiriciye mesaj gönderebilirsiniz. </p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</body>


<script type="text/javascript">

    $("#btnsend").click(function (e) {
        let contacts = {
            UserName: $("#namesurname").val(),
            Subject: $("#subject").val(),
            Email: $("#email").val(),
            Message: $("#message").val()
        };

        var bolum = document.createElement("div");
        bolum.className = "alert alert-success";
        bolum.innerHTML = "Teşekkürler! Mesajınız geliştiriciye başarıyla gönderildi.";
        document.body.appendChild(bolum);
        e.preventDefault();

        //var veri = $("#subForm").serialize();
        //let email = document.getElementById("Email");

        $.ajax({
            type: "post",
            url: "/Contact/Index/",
            data: contacts,
            success: function (f) {
                $("#contact_result").html(bolum);
                setTimeout(() => { window.location.reload() }, 6000);
            }
        });
    });

</script>