    $("#btn").click(function (e) {
        let values = {
            Email: $("#Mail").val()
        };

        var alan = document.createElement("div");
        alan.className = "alert alert-success";
        alan.innerHTML = "Abone olduğunuz için teşekkürler! Yeni bir blog, haber yapıldığında artık E-postanıza gönderilecektir. Abonelikten istediğiniz zaman çıkabilirsiniz.";
        document.body.appendChild(alan);
        e.preventDefault();

        //var veri = $("#subForm").serialize();
        //let email = document.getElementById("Email");

        $.ajax({
            type: "post",
            url: "/Newsletter/SubscribeMail/",
            data: values,
            success: function (f) {
                $("#result").html(alan);
                setTimeout(() => { window.location.reload() }, 6600);
            }
        });
    });



