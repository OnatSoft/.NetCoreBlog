@using EntityLayer.Concreate
@model List<Category>

                       <!--**************************** Burası Yazar Paneli Ana Sayfasında yer alan Kategori Listesi Component bölümü *******************************-->
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Kategori Listesi</h4>
               
                    <table class="table table-striped">

                        <thead>
                            <tr>
                                <th> No </th>
                                <th> Kategori Adı </th>
                                <th> Durum </th>
                                <th> İşlemler </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.CategoryID </td>
                                    <td> @item.Name </td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <label class="badge badge-success">Aktif</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-secondary">Pasif</label>
                                        }
                                    </td>
                                    <td>
                                        <div class="progress">
                                            <div class="progress-bar bg-gradient-success" role="progressbar" style="width: 25%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                

            </div>
        </div>
    </div>
</div>