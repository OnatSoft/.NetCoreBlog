@using EntityLayer.Concreate
@model List<Writer>

<!--******************* Yazar Paneli Sayfasında "Yazar Hakkında" View Component Bölümü *******************-->
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title"> Yazar Hakkında </h3>

                @foreach (var item in Model)
                {
                    <div class="d-flex mt-5 align-items-top">
                        <img src="@item.İmage" class="img-sm rounded-circle mr-3" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2"> Kullanıcı Adı: @ViewBag.veri // Ad Soyad: @item.Name // @item.EMail </h5>
                            <p class="mb-0 font-weight-light"> @item.About </p>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>