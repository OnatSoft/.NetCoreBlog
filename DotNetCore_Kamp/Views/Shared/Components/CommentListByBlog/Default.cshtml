@model IEnumerable<EntityLayer.Concreate.Comment>
<!----- Burası blog detaylarında yorumlar listesi için çağrılan Component View Sayfası ----->
<!-- Shared > Components klasörü içindeki Comment List By Blog klasörü View Sayfası -->

<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <span class="alert alert-danger">Buraya henüz hiç yorum yazılmamış. İlk yorumu sen yaz!</span>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/CoreBlogTema/images/user_icon.png" alt="usericon" width="60" height="60" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0"> @item.UserName - @(((DateTime)item.CreateDate).ToString("d.MM.yyyy")) </h5>

                <p class="mb-sm-3"> @item.Content </p>
            </div>

        </div>
    }
</div>