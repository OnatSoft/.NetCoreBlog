@model EntityLayer.Concreate.Writer

@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}
<!--************************ Burası Yazar Profili Düzenleme Tasarım Sayfası - Writer Controller **************************-->

<div class="content-wrapper">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
                {
                    <h2> Yazar Profili Düzenleme </h2>
                    <br />
                    @Html.HiddenFor(x=> x.WriterID, new { @class="form-control" })
                    <form class="forms-sample">

                        <div class="form-group">
                            <label for="exampleInputName1"> Adı Soyadı </label>
                            @Html.TextBoxFor(x=> x.Name, new { @class="form-control", @disabled="disable" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail3"> E-posta Adresi </label>
                            @Html.TextBoxFor(x=> x.EMail, new { @class="form-control", @disabled="disable" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword4"> Parola </label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword4"> Parola (Tekrar) </label>
                            @Html.PasswordFor(x => x.PasswordRepeat, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label> Profil Resmi </label>
                            <div class="input-group col-xs-12">
                                <input type="file" name="İmage" class="btn btn-info" />
                            </div>
                            
                        </div>

                        <div class="form-group">
                            <label for="exampleTextarea1"> Hakkında </label>
                            @Html.TextAreaFor(x => x.About, 10, 5, new { @class = "form-control", @placeholder="Okurlarınıza Kendinizden Kısaca Bahsedin..." })
                            @Html.ValidationMessageFor(x => x.About, "", new { @class = "text-danger" })
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success m-md-2"> Güncelle </button>
                        <button class="btn btn-light m-md-2" asp-action="BlogListByWriter" asp-controller="Blog"> İptal </button>

                    </form>
                }
            </div>
        </div>
    </div>
</div>