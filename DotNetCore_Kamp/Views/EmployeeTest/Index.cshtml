@using DotNetCore_Kamp.Controllers
@model List<Class1>
<!--------***************** Burası Api kaynağı'nın içinde ki verileri istek göndererek listeleme ve CRUD View sayfası ******************-------->

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="ibox">
    <div class="ibox-title">
        <h3>Çalışanlar</h3>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content">
        <p class="text-body"> Api'ler ile uzaktan projeye bağlantı kurarak ilgili Api kaynağına istek göndererek Çalışanların veya Yazarların CRUD işlemlerini yapıyoruz. </p>
        <table class="table table-bordered" style="width: 50%;">
            <tr>
                <th style="width: 6%;">ID</th>
                <th style="width: 40%;">Adı Soyadı</th>
                <th>İşlemler</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>
                        <a href="/EmployeeTest/EmployeeDelete/@item.ID" class="btn btn-outline-danger" onclick="return confirm('Çalışanı silmek istiyor musunuz?')"><i class="fa fa-trash"></i>&nbsp; Sil </a>
                        <a href="/EmployeeTest/EmployeeEdit/@item.ID" class="btn btn-outline-info ml-md-2"><i class="fa fa-edit"></i>&nbsp; Düzenle </a>
                    </td>
                </tr>
            }
        </table>
        <br />
        <a href="/EmployeeTest/EmployeeAdd/" class="btn btn-primary btn-xl btn-rounded"><i class="fa fa-plus"></i>&nbsp; Yeni Çalışan Ekle </a>
    </div>
</div>