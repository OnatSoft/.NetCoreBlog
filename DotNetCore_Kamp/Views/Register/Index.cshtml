@model EntityLayer.Concreate.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!--******************************** Burası Yazar Kayıt Sayfası *******************************************-->

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <!--** Business katmanında Yazar Kayıt için Geçerlilik Kuralları Özel hata mesajları yazdık.
    <!--** Burada Method POST olduğunda form oluşturduk ve TextBoxFor ile veri girişi sağlayıp ValidationMessageFor ile özel hata mesajlarını kullanıp renklendirdik. **-->
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">

                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adı Soyadı*</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })

                            @*<input type="text" class="form-control" id="validationDefault01" name="Name" autofocus required="">*@
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-posta Adresi*</label>
                            @Html.TextBoxFor(x => x.EMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.EMail, "", new { @class = "text-danger" })

                            @*<input type="email" class="form-control" id="validationDefault02" name="EMail" required="">*@
                        </div>

                    </div>
                    <div class="form-row">

                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Parola*</label>
                            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Parola Tekrar*</label>
                            @Html.TextBoxFor(x => x.PasswordRepeat, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.PasswordRepeat, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <button type="submit" class="btn btn-success submit mb-4">Kayıt Yap</button>
                    <p>
                        <a href="#" id="btn1">Yazarlık şartlarımızı okumak için tıklayınız</a>
                    </p>
                }

            </div>
        </div>
    </div>

    <script>
        $('#btn1').click(function () {
            swal("Yazarlık Şartlarımız", "Sitemizde verdiğiniz e-posta adresi üzerinden bilgi ve haber postaları spam kutusuna ulaşmadan gönderilmeye devam edilecektir. Eğer e-posta bülteninden çıkmak isterseniz gönderdiğimiz postaların altında bulunan aboneliğimi sonlandır butonuna tıklayıp bültenden çıkabilirsiniz. Sitemiz de kayıtlı kişisel bilgilerinizi şifrelenmiş formatta gayet güvenli veri tabanlarımız da saklamaktayız.");
        });
    </script>
</section>