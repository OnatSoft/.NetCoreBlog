@using EntityLayer.Concreate
@model List<AppUser>

@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!------******************************* Burası Admin Paneli içerisinde Kullanıcı ve Rol Listesi view Sayfası *********************************------>

<html>
<body>

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2> Kullanıcı ve Rol Listesi </h2>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInUp">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">

                    <div class="ibox-title">
                        <h3> Kullanıcıya Rol Atama </h3>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>

                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th> Adı Soyadı </th>
                                        <th> Kullanıcı Adı </th>
                                        <th> Rol Atama </th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td> @item.NameSurname </td>
                                            <td> @item.UserName </td>
                                            <td>
                                                <a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-success"> Atama Yap </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>

                            <br />
                            <a class="btn btn-primary btn-lg btn-rounded" href="/Admin/AdminRole/Index"><i class="fa fa-arrow-left"></i>&nbsp; Rol Listesine Git </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>