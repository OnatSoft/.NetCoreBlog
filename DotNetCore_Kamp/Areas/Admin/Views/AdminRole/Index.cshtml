@using EntityLayer.Concreate
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!------*********************************** Admin Paneli içinde Roller view Sayfası **************************************------>

<html>
<body>

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2> Rol Listesi </h2>
        </div>
    </div>

    <div class="wrapper wrapper-content animated fadeInUp">

        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">

                    <div class="ibox-title">
                        <h3> Sisteme Kayıtlı Roller </h3>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>

                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th> ID </th>
                                        <th> Rol Adı </th>
                                        <th> İşlemler </th>
                                    </tr>
                                </thead>

                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr>
                                            <td> @item.Id </td>
                                            <td> @item.Name </td>
                                            <td>
                                                <a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Seçilen rolü silmek istiyor musunuz?')"><i class="fa fa-trash"></i>&nbsp; Sil </a>
                                                <a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-success btn-sm"><i class="fa fa-edit"></i>&nbsp; Düzenle </a>
                                            </td>
                                        </tr>
                                    </tbody>
                                }
                            </table>

                            <br />
                            <a href="/Admin/AdminRole/AddRole" class="btn btn-primary btn-lg btn-rounded"><i class="fa fa-plus"></i>&nbsp; Yeni Rol Ekle </a>
                            <a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary btn-lg btn-rounded"><i class="fa fa-user-plus"></i>&nbsp; Kullanıcıya Rol Ata </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>